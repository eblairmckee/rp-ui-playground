{
  "name": "@blairwitch/proposed-ui",
  "version": "0.1.0",
  "description": "A collection of React components with advanced slot-based composition patterns",
  "keywords": ["react", "components", "ui", "shadcn", "slot-composition", "tailwind"],
  "author": "Blair McKee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eblairmckee/rp-ui-playground",
    "directory": "packages/proposed-ui"
  },
  "homepage": "https://github.com/eblairmckee/rp-ui-playground/tree/main/packages/proposed-ui",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/globals.css",
    "./dist/globals.css": "./dist/globals.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && bun run build:css && bun run registry:build",
    "build:css": "postcss src/styles/globals.css -o dist/globals.css",
    "registry:build": "shadcn build",
    "dev": "tsup --watch & bun run dev:css",
    "dev:css": "nodemon --watch src/styles --ext css --exec \"bun run build:css\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@shadcn/ui": "^0.0.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9",
    "nodemon": "^3.0.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.0",
    "radix-ui": "^1.4.2",
    "shadcn": "^2.9.3-canary.0",
    "tailwindcss": "^4.1.11",
    "tsup": "^8.0.0",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5"
  }
}
