{
  "name": "ui-registry",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup && bun run build:css",
    "build:css": "postcss src/styles/globals.css -o dist/globals.css",
    "dev": "tsup --watch & bun run dev:css",
    "dev:css": "nodemon --watch src/styles --ext css --exec \"bun run build:css\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "radix-ui": "^1.4.2",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9",
    "nodemon": "^3.0.0",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^4.1.11",
    "tsup": "^8.0.0",
    "typescript": "^5"
  }
}
